    "version": "0.2.0",
    "configurations": [
        {
            "name": "Bash Launch (disemvoweled)",
            "type": "bashdb",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/shell/disemvowel.sh",
            "args": ["this is the string to disemvoweled"]
        },
        {
            "name": ".NET Core Launch (disemvoweled)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/dotnet/bin/Debug/netcoreapp2.2/Disemvoweling.dll",
            "args": ["this is the string to disemvoweled"],
            "cwd": "${workspaceFolder}/dotnet",
            "console": "internalConsole",
            "stopAtEntry": false
        }
    ]
}